<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/ib_small_brush"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="9dp"
        tools:src="@drawable/small_brush"
        app:layout_constraintBottom_toTopOf="@+id/ib_mudium_brush"
        app:layout_constraintEnd_toEndOf="parent"
           android:background="@drawable/small_brush"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"
         />

    <ImageButton
        android:id="@+id/ib_mudium_brush"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="9dp"
        app:layout_constraintBottom_toTopOf="@+id/ib_larg_brush"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ib_small_brush"
        android:background="@drawable/mudium_brush"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"
        tools:src="@drawable/mudium_brush" />

    <ImageButton
        android:id="@+id/ib_larg_brush"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="9dp"
android:background="@drawable/larg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ib_mudium_brush"

        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"
        tools:src="@drawable/larg" />

</androidx.constraintlayout.widget.ConstraintLayout>